<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Bill_Breakdown_Application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bill Break-down Application"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IndividualAssignment">
        <activity
            android:name="com.example.Bill_Breakdown_Application.MainActivity"

        android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.Bill_Breakdown_Application.SplitActivity" />
        <activity android:name="com.example.Bill_Breakdown_Application.BreakdownActivity" />
        <activity android:name="com.example.Bill_Breakdown_Application.ResultActivity" />
        <activity android:name="com.example.Bill_Breakdown_Application.FriendGroupActivity"/>
        <activity android:name="com.example.Bill_Breakdown_Application.CreateGroupActivity"/>
        <activity android:name="com.example.Bill_Breakdown_Application.FriendsListActivity"/>


    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>